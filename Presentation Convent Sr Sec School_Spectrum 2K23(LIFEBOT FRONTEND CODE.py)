while True:
 if f==1:
    m=0
    n=0
    while m<=2:
        print("Earth Goddess  游깴:")
        print('Hey! Eco minion choose what you want to learn about plastic pollution today')
        print()
        print('1. Plastic being detrimental to the environment')
        print('2. ways to cut down daily plastic usage')
        print('3. question hour')
        a=int(input(" Eco Minion, Kindly Enter Your Choice:"))
        if a==1:
            print("Earth Goddess  游깴:")
            print(ctt.plastic_info())
        elif a==2:
            print("Earth Goddess  游깴:")
            print(ctt.plastic_soln())
        elif a==3:
            print(ctt.plastic_ques1())
            b=input('Eco Minion 游꺔游눜, Enter your answer:')
            B=b.lower()
            if B=='b':
                print(ctt.plastic_ques1soln())
            else :
                print(ctt.plastic_ques1solnw())
            print(ctt.plastic_ques2())
            c=input('Eco Minion 游꺔游눜, Enter your answer:')
            C=b.lower()
            if C=='a':
                print(ctt.plastic_ques2soln())
            else :
                print(ctt.plastic_ques2solnw())
            print(ctt.plastic_ques3())
            d=input('Eco Minion 游꺔游눜, Enter your answer:')
            D=d.lower()
            if D=='d':
                print(ctt.plastic_ques3soln())
            else :
                print(ctt.plastic_ques3solnw())
        print()
        q=input('Eco minion 游꺔游눜, If you want to continue to learn more about the same then enter yes :')
        Q=q.lower()
        #o=Q.find('yes')
        if q=="yes":
            m=m+1
        else:
            print(ctt.menu())
            f=int(input("Kindly Enter Your Choice 游때:"))
            break
            
            


